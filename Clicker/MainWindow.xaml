<Window x:Class="Clicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clicker"
        mc:Ignorable="d"
        FontSize="11pt"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="{Binding CurrentPlayer.CurrentPoints}"
               Width="Auto" Height="Auto" Margin="0,10,0,0"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Top"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"/>

        <Label Content="Owned"
               Width="Auto" Height="Auto" Margin="0,0,0,40"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"/>

        <Label Content="{Binding CurrentPlayer.NumberOfAutoClickers}"
               Width="30" Height="Auto" Margin="10,0,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"/>

        <Button Content="Add points!" Click="Button_AddClick"
                Width="Auto" Height="25" Margin="0,0,0,10"
                Background="Aquamarine"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"/>

        <Button Content="Buy auto clicker!" Click="Button_BuyAutoClicker"
                Width="Auto" Height="25" Margin="50,0,0,0"
                Background="Aquamarine"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                ToolTip="Costs 10 points!"/>

        <Button Content="Placeholder!"
                Width="Auto" Height="25" Margin="50,55,0,0"
                Background="Aquamarine"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"/>
    </Grid>
</Window>
